<!-- Story Prompt generator -->
<div class="container" id="prompt">
        <div class="row flex-top flex-center">
          <header class="border shadow">
          <h1 class="st-h1">Story Prompt Generator</h1>
          </header>
        </div>
         
        <div class="row flex-center">
         <button id="button" class="btn-large btn-block new-quote-button" onClick="getQuote()">New Prompt</button>
         <button id="button" class="btn-medium tweet-button" onClick="tweetQuote()">Tweet Prompt</button>
         <button id="button" class="btn-medium fb-button" onClick="shareQuote()">Share Prompt</button>
        </div>
         
        <div class="row flex-center">
         <main class="card card-h" style="background: #9c96b3">
          <p class="quote card-body center" id="newQuoteSection" style="color: #ffffff;">Start browsing our prompts for your perfect story!</p>
         </main>
        </div>
             
